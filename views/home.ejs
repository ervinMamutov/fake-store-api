<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/home.css" />
    <title>Bugatti Store</title>
  </head>
  <body>
    <%- include('./includes/nav.ejs', {isLoggedIn: isLoggedIn}) %>

    <div class="user-email">
      <% if(email){ %>
      <h3>Hello, <%= email %></h3>
      <% } %>
    </div>
    <div class="products">
      <% if (products) { %> <% products.forEach((product) => { %>
      <div class="product">
        <img
          class="product-image"
          src="<%= product.url %>"
          alt="<%= product.name %>"
        />
        <h1><%= product.name %></h1>
        <p>$<%= product.price %></p>
      </div>
      <% }) %> <% } %>
    </div>
  </body>
</html>
